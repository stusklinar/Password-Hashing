@model User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">
    <form asp-action="Index">
        <h3>Password to hash</h3>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-6 col-form-label">Password</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Password" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-12 col-form-label">Hash Result</label>
        </div>
        <div class="form-group row">
            <label class="col-sm-12 col-form-label">@ViewBag.Hash</label>
        </div>
        <div class="form-group row">
            <button class="btn btn-primary">Hash Password</button>
        </div>
    </form>
</div>
<div class="row">
    <form  asp-action="Validate">
        <h3>Validate Hash</h3>
        <div class="form-group row">
            <label for="hash" class="col-sm-6 col-form-label">Hash</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" name="hash" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-6 col-form-label"></label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Password" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-12">Hash Result</label>
        </div>
        <div class="form-group row">
            <label class="col-sm-12">@ViewBag.HashResult</label>
        </div>
        <button class="btn btn-primary"> Validate Hash</button>
    </form>
</div>